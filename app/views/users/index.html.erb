<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table class="table">
  <thead>
    <tr>
      <th >First name</th>
      <th >Last name</th>
      <th >Phone</th>
      <th >Is admin</th>
      <th colspan="1"></th>
      <th colspan="1"></th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.phone %></td>
        <td><%= user.is_admin %></td>
        <td colspan="1"><%= link_to 'Show', user , :class => 'btn btn-success'%></td>
        <td colspan="1"><%= link_to 'Edit', edit_user_path(user), :class => 'btn btn-info' %></td>
        <td colspan="1"><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } , :class => 'btn btn-danger'%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path , :class => 'btn btn-warning' %>
